<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dinBestilling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tidBoks"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Bestillingsinformasjon"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/resturantNavn"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dinBestilling"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Resturant navn:"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/resNavn"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resturantNavn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp" />

    <TextView
        android:id="@+id/besDato"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resNavn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="Dato:"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/bDato"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/besDato"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp" />

    <TextView
        android:id="@+id/besTid"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bDato"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="Tidspunkt:"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/bTid"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/besTid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp" />

    <TextView
        android:id="@+id/besVenner"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bTid"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="Inviterte venner:"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/bVenner"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/besVenner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp" />

    <LinearLayout
        android:id="@+id/boks"
        android:padding="15dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:layout_below="@+id/bVenner">

        <Button
            android:id="@+id/btnAvbestill"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bVenner"
            android:layout_centerHorizontal="true"

            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Avbestill" />

        <Button
            android:id="@+id/btnOk"
            android:layout_width="120dp"

            android:layout_height="wrap_content"
            android:layout_below="@+id/bVenner"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Ok" />
    </LinearLayout>
</RelativeLayout>