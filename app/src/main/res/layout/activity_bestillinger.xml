<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bestilling"
        android:textAlignment="center"
        android:textSize="24sp" />


    <Button
        android:id="@+id/bestillingKnapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrer bestilling" />

    <Button
        android:id="@+id/seBestillingerKnapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Se bestillinger" />

    <Button
        android:id="@+id/btnTilbake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tilbake til start" />


</LinearLayout>