<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dinBestilling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tidBoks"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Din bestillingsinformasjon"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bestillingTekst"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_below="@+id/dinBestilling"
        android:layout_marginTop="6dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bestillingTekst"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Ok" />



</RelativeLayout>