<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/overskrift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/trocchi"
        android:text="@string/overskrift"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:shadowColor="#001496"
        android:shadowDx="6"
        android:shadowDy="6"
        android:shadowRadius="9"
        android:layout_marginTop="35dp"
        android:textSize="40sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/resturanterKnapp"
        android:layout_width="270dp"
        android:layout_height="73dp"
        android:layout_below="@id/overskrift"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/trocchi"
        android:shadowColor="#001496"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="9"
        android:text="Restauranter"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <Button
        android:id="@+id/vennerKnapp"
        android:layout_width="270dp"
        android:layout_height="73dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/trocchi"
        android:shadowColor="#001496"
        android:textColor="#FFFFFF"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="9"
        android:layout_below="@id/resturanterKnapp"
        android:textSize="20sp"
        android:text="Venner" />

    <Button
        android:id="@+id/bestillingerKnapp"
        android:layout_width="270dp"
        android:layout_height="73dp"
        android:layout_below="@id/vennerKnapp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/trocchi"
        android:shadowColor="#001496"
        android:textColor="#FFFFFF"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="9"
        android:textSize="20sp"
        android:text="Bestilling" />


    <Button
        android:id="@+id/innstillingerKnapp"
        android:layout_width="270dp"
        android:layout_height="73dp"
        android:layout_below="@id/bestillingerKnapp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/trocchi"
        android:shadowColor="#001496"
        android:textColor="#FFFFFF"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="9"
        android:textSize="20sp"
        android:text="Innstillinger" />


</RelativeLayout>